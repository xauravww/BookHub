<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cvlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp"
android:layout_margin="5dp"
    android:elevation="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="10dp"

android:outlineSpotShadowColor="@color/black"
    android:outlineProvider="bounds"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgBookImage"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_book_image"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize20Percent"
        app:strokeColor="@android:color/white"
        app:strokeWidth="5dp" />

    <TextView
    android:id="@+id/txtRecyclerRowItem"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:textSize="20sp"
    android:text="List Item "
    android:textStyle="bold"
    android:textColor="#000000"
    android:layout_toRightOf="@+id/imgBookImage"
    android:maxLines="3"

    />
<TextView
    android:id="@+id/txtBookAuthor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Name of the author"
    android:layout_below="@+id/txtRecyclerRowItem"
    android:paddingLeft="10dp"
    android:layout_toRightOf="@+id/imgBookImage"
    />
<TextView
    android:id="@+id/txtBookPrice"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Rs. 299"
    android:layout_below="@id/txtBookAuthor"
    android:layout_toRightOf="@id/imgBookImage"
    android:padding="10dp"/>
<TextView
    android:id="@+id/txtBookRating"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="4.5"
    android:layout_alignParentRight="true"
    android:layout_margin="10dp"
    />
<ImageView
    android:id="@+id/imgStar"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@drawable/ic_star"

    android:layout_marginTop="5dp"
    android:padding="5dp"
    android:layout_toLeftOf="@+id/txtBookRating"

    />
</RelativeLayout>

    </androidx.cardview.widget.CardView>





